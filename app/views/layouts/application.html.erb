<!DOCTYPE html>
<html>
  <head>
    <title>FOOD LOVER</title>
    <meta property="og:type" content="website">
    <meta property="og:title" content="leo-food">

    <meta property="og:image" content="images/themes/49902/assets/logo.png?1478506655659">
    <meta property="og:image:secure_url" content="images/themes/49902/assets/logo.png?1478506655659">


    <meta property="og:url" content="https://leo-food.bizwebvietnam.net">
    <meta property="og:site_name" content="leo-food">
    <!-- /snippets/twitter-card.liquid -->
    <!-- Helpers ================================================================== -->
    <link rel="canonical" href="https://leo-food.bizwebvietnam.net">
    <link rel="icon" href="<%= asset_path('favicon.ico') %>">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag 'frontend/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'frontend/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="leo-food" class="template-index  header-default  layout-default">
  <div id="page">
    <section id="page_content" class="">
      <div class="ap-pusher-after"></div>
      <%= render "shared/header" %>
      <main class="main-content" role="main">
      <%= yield %>
      </main>
      <%= render "shared/footer" %>
      <script type="text/javascript">
        ! function($) {
          $(function() {
            $('body').on('touchstart.dropdown', '.dropdown-menu', function(e) {
              e.stopPropagation();
            });
            $(document.body).on('click', '[data-toggle="dropdown"]', function() {
              if (!$(this).parent().hasClass('open') && this.href && this.href != '#') {
                window.location.href = this.href;
              }
            });
          })
        }(window.jQuery);
          $('#btn_tim_kiem').click(function(){
             var key = $('#tu_khoa').val();
             if(!key.trim()){
                 $('#tu_khoa').val('');
                 return false;
             }
          });
        backtotop();
      </script>

    </section>

    <div id="back-top" class="return-top hidden-xs display" style="display: block;">
      <i class="fa fa-angle-up"></i>
      <span class="return-icon">Top</span>
    </div>
  </div>
  <%= render "shared/mobile_menu" %>
  </body>
</html>
