<div class="row">

  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 block_verticalmenu">

    <div id="apollo-verticalmenu" class="block apollo-verticalmenu">

      <div class="title_block">
        <span>Gian hàng ẩm thực</span>
        <span class="shapes round">
          <em class="shapes bottom"></em>
        </span>
      </div>

      <div class="block_content" style="">
        <div id="verticalmenu" class="verticalmenu" role="navigation">
          <div class="navbar">
            <div class="navbar-ex1-collapse">
              <ul class="nav navbar-nav nav-verticalmenu">
                <% @categories.each do |category| %>
                    <li class="parent dropdown">
                      <a class="dropdown-toggle has-category" data-toggle="dropdown" href="/collections/all">
                          <span class="menu-icon has-icon">
                            <% if category.name == 'cơm' %>
                              <i class="fa fa-university"></i>
                            <% elsif category.name == 'bún & mỳ' %>
                                <i class="fa fa-cutlery"></i>
                            <% elsif category.name == 'lẩu' %>
                                <i class="fa fa-ship"></i>
                            <% elsif category.name == 'đồ ăn nhanh' %>
                                <i class="fa fa-spoon"></i>
                            <% elsif category.name == 'đồ nướng' %>
                                <i class="fa fa-fire"></i>
                            <% elsif category.name == 'hải sản' %>
                                <i class="fa fa-tint"></i>
                            <% elsif category.name == 'bánh kẹo' %>
                                <i class="fa fa-birthday-cake"></i>
                            <% else %>
                                <i class="fa fa-glass"></i>
                            <% end %>
                            <span class="menu-title"><%= category.name %></span>
                          </span>
                          <b class="caret"></b>
                      </a>
                      <div class="dropdown-sub dropdown-menu sub-apmegamenu-1" style="width:700px">
                      <div class="dropdown-menu-inner">
                      <div class="row">


                      <div class="mega-col col-sm-9">


                      <div class="products_menu">

                      <div class="menu-title">
                      Món ngon trong ngày
                      </div>

                      <div class="product-block">


                      <div class="product-container clearfix">
                      <div class="product-meta">
                      <h5 class="name">
                      <a class="product-name"
                      href="/com-van-phong"
                      title="Cơm văn phòng">
                      Cơm văn phòng
                      </a>
                      </h5>
                      <div class="product-desc">
                      <p style="color: rgb(0, 0, 0); font-family: Arial, Verdana, sans-serif; font-size: 14px; line-height: normal;">
                      <br> Món ăn đơn giản với chiếc bánh...
                      </p>
                      </div>
                      <div class="content_price">

                      <span class="price product-price">
                      35.000₫
                      </span>
                      </div>
                      </div>
                      <div class="image ">
                      <a class="product_img_link" href="/com-van-phong" title="Cơm văn phòng">
                      <%= image_tag "products/552048541-fix.jpg", :class=>"replace-2x img-responsive" %>
                      </a>
                      </div>

                      </div>


                      <div class="product-container clearfix">
                      <div class="product-meta">
                      <h5 class="name">
                      <a class="product-name"
                      href="/com-ga"
                      title="Cơm gà">
                      Cơm gà
                      </a>
                      </h5>
                      <div class="product-desc">
                      <p style="color: rgb(0, 0, 0); font-family: Arial, Verdana, sans-serif; font-size: 14px; line-height: normal;">
                      <br> Trong ẩm thực Việt, có lẽ chẳng...
                      </p>
                      </div>
                      <div class="content_price">

                      <span class="price product-price">
                      40.000₫
                      </span>
                      </div>
                      </div>
                      <div class="image ">
                      <a class="product_img_link" href="/com-ga" title="Cơm gà">
                      <%= image_tag "products/4556114201404-fix.jpg", :class=>"replace-2x img-responsive" %>
                      </a>
                      </div>

                      </div>
                      </div>
                      </div>
                      </div>
                        <div class="mega-col col-sm-3">
                          <% if category.name == 'cơm' %>
                              <div class="chef_1">
                                <%= image_tag "chef_1.png"%>
                              </div>
                          <% elsif category.name == 'bún & mỳ' %>
                              <div class="chef_2">
                                <%= image_tag "chef_2.png"%>
                              </div>
                          <% elsif category.name == 'lẩu' %>
                              <div class="chef_3">
                                <%= image_tag "chef_3.png"%>
                              </div>
                          <% elsif category.name == 'đồ ăn nhanh' %>
                              <div class="chef_4">
                                <%= image_tag "chef_4.png"%>
                              </div>
                          <% elsif category.name == 'đồ nướng' %>
                              <div class="chef_5">
                                <%= image_tag "chef_5.png"%>
                              </div>
                          <% elsif category.name == 'hải sản' %>
                              <div class="chef_6">
                                <%= image_tag "chef_6.png"%>
                              </div>
                          <% elsif category.name == 'bánh kẹo' %>
                              <div class="chef_7">
                                <%= image_tag "chef_7.png"%>
                              </div>
                          <% else %>
                              <div class="chef_8">
                                <%= image_tag "chef_8.png"%>
                              </div>
                          <% end %>
                        </div>
                      </div>
                      </div>
                      </div>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      $(".verticalmenu .caret").click(function() {
        var $parent = $(this).parent();
        $parent.toggleClass('open');
        return false;
      });
    </script>

  </div>
